{
  "name": "nodejs_server_boilerplate",
  "version": "1.0.0",
  "description": "a boilerplate for a nodejs backend which can be bundled with webpack",
  "main": "server.js",
  "scripts": {
    "dev": "webpack --watch --config config/webpack.dev.js",
    "build": "NODE_ENV=production webpack --config config/webpack.prod.js",
    "start": "node ../../dist/server.bundle.js"
  },
  "keywords": [
    "nodejs",
    "backend",
    "server",
    "boilerplate"
  ],
  "babel": {
    "presets": [
      "@babel/env"
    ]
  },
  "author": "Vindao (Vincent Schmitt)",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-http-to-https": "^1.1.4",
    "express-static-gzip": "^1.1.3",
    "generate-password": "^1.4.1",
    "mongoose": "^5.3.15",
    "node-fetch": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/plugin-transform-regenerator": "^7.0.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.4",
    "nodemon-webpack-plugin": "^4.0.7",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  }
}
